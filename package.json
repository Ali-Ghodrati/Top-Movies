{
  "name": "top-movies",
  "version": "1.0.0",
  "description": "top 250 movies",
  "scripts": {
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -o css/style.prefix.css css/style.comp.css",
    "compress:css": "sass css/style.prefix.css css/style.css --style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "start:parcel": "parcel index.html",
    "build:parcel": "parcel build index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ali-Ghodrati/Top-Movies.git"
  },
  "author": "ali ghodrati",
  "license": "ISC",
  "browserslist": "last 10 versions",
  "bugs": {
    "url": "https://github.com/Ali-Ghodrati/Top-Movies/issues"
  },
  "homepage": "https://github.com/Ali-Ghodrati/Top-Movies#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.11.0",
    "postcss-cli": "^10.1.0",
    "sass": "^1.69.7"
  },
  "dependencies": {
    "core-js": "^3.35.0",
    "regenerator-runtime": "^0.14.0"
  }
}
